<%- include("./../incluir/header.ejs") %>
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid">
            <h1 class="mt-4">Secci√≥n Usuarios</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                <li class="breadcrumb-item active">Productos</li>
            </ol>
            
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table mr-1"></i>
                    Listado de Usuarios - <a class="btn btn-success" href="/admin/usuarios/add">Nuevo Usuario</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>Correo</th>
                                    <th>Telefono</th>
                                    <th>Clave</th>
                                    <th>Perfil</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>Correo</th>
                                    <th>Telefono</th>
                                    <th>Clave</th>
                                    <th>Perfil</th>
                                    <th>Acciones</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                <% if (lista.length > 0){
                                    lista.forEach((usuarios) => { %> 
                                        <tr>
                                            <td><%=usuarios.id%></td>
                                            <td><%=usuarios.nombre%></td>
                                            <td><%=usuarios.apellido%></td>
                                            <td><%=usuarios.correo%></td>
                                            <td><%=usuarios.telefono%></td>
                                            <td><%=usuarios.clave%></td>
                                            <td><%=usuarios.perfil%></td>
                                            <td><a class="btn btn-primary" href="/admin/usuarios/modif/<%=usuarios.id%>" >Modificar</a>  -  
                                                <a class="btn btn-danger" href="/admin/usuarios/elim/<%=usuarios.id%>" onclick="return confirm('borrar')">Eliminar</a>  
                                                </td> 
                                        </tr>
                                    <%});
                                    }%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include("./../incluir/footer.ejs") %>